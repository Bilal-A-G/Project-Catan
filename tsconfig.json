{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [ "es6", "DOM" ],
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ],
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "strict": true,
  "skipDefaultLibCheck": true,
  "skipLibCheck": true
}
